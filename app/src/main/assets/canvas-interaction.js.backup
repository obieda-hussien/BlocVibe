            Object.assign(indicator.style, defaultStyles, options.styles || {});
            
            // Position based on drop type
            let top, left, width, height;
            
            switch (position.type) {
                case 'before':
                    top = rect.top + scrollY - 2;
                    left = rect.left + scrollX;
                    width = rect.width;
                    height = '4px';
                    break;
                case 'after':
                    top = rect.bottom + scrollY - 2;
                    left = rect.left + scrollX;
                    width = rect.width;
