                    top = rect.top + scrollY + (rect.height / 2) - 2;
                    left = rect.left + scrollX + (rect.width / 2) - 2;
                    width = '4px';
                    height = '4px';
                    break;
                default:
                    top = rect.bottom + scrollY - 2;
                    left = rect.left + scrollX;
                    width = rect.width;
