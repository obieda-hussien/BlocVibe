<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_to_palette_btn"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Components"
            app:icon="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/selected_element_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editing: (none)"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_class_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_width_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Width (e.g., 100px or 100%)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_color_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color (e.g., #FF0000)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
