<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- عنوان القسم -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_flexbox"
            android:layout_marginEnd="12dp"
            android:tint="@color/primary_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="إعدادات Flexbox"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <ImageView
            android:id="@+id/ivFlexboxHelp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_help"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            android:tint="@color/text_secondary" />

    </LinearLayout>

    <!-- عنصر التحكم في direction -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اتجاه التخطيط"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Row -->
                <LinearLayout
                    android:id="@+id/btnDirectionRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/selection_button_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:src="@drawable/flexbox_row"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="صف"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_gravity="center"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Row Reverse -->
                <LinearLayout
                    android:id="@+id/btnDirectionRowReverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/selection_button_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="24dp"
                        android:src="@drawable/flexbox_row_reverse"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="صف عكسي"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_gravity="center"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Column -->
                <LinearLayout
                    android:id="@+id/btnDirectionColumn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/selection_button_bg"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="32dp"
                        android:src="@drawable/flexbox_column"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="عمود"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_gravity="center"
                        android:gravity="center" />

                </LinearLayout>

                <!-- Column Reverse -->
                <LinearLayout
                    android:id="@+id/btnDirectionColumnReverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/selection_button_bg"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="32dp"
                        android:src="@drawable/flexbox_column_reverse"
                        android:layout_gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="عمود عكسي"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:layout_gravity="center"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <!-- عنصر التحكم في justify-content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المحاذاة الأفقية"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerJustifyContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:popupBackground="@color/background_secondary"
            android:textColor="@color/text_primary" />

    </LinearLayout>

    <!-- عنصر التحكم في align-items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المحاذاة العمودية"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerAlignItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:padding="12dp"
            android:popupBackground="@color/background_secondary"
            android:textColor="@color/text_primary" />

    </LinearLayout>

    <!-- عنصر التحكم في gap -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المسافة بين العناصر"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <SeekBar
                android:id="@+id/seekBarGap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="50"
                android:progress="0"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tvGapValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0px"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:minWidth="50dp"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- عنصر التحكم في flex-wrap -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            text="الالتفاف"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- No Wrap -->
            <LinearLayout
                android:id="@+id/btnNoWrap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/selection_button_bg"
                android:padding="12dp"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:src="@drawable/flexbox_nowrap"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بدون التفاف"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Wrap -->
            <LinearLayout
                android:id="@+id/btnWrap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/selection_button_bg"
                android:padding="12dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:src="@drawable/flexbox_wrap"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="التفاف"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Wrap Reverse -->
            <LinearLayout
                android:id="@+id/btnWrapReverse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/selection_button_bg"
                android:padding="12dp"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:src="@drawable/flexbox_wrap_reverse"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="التفاف عكسي"
                    android:textSize="12sp"
                    android:textColor="@color/text_primary"
                    android:layout_gravity="center"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- منطقة المعاينة -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/preview_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="معاينة مباشرة"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- حاوية المعاينة -->
        <LinearLayout
            android:id="@+id/previewContainer"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/preview_flexbox"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- عناصر المعاينة -->
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/preview_element_1"
                android:layout_margin="2dp" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/preview_element_2"
                android:layout_margin="2dp" />

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/preview_element_3"
                android:layout_margin="2dp" />

        </LinearLayout>

        <!-- أزرار المعاينة -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnPreviewReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="إعادة تعيين"
                android:textSize="12sp"
                android:background="@drawable/secondary_button_bg"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnPreviewToggle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="إظهار/إخفاء المعاينة"
                android:textSize="12sp"
                android:background="@drawable/primary_button_bg"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- أزرار التحكم العامة -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnApplyFlexbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="تطبيق Flexbox"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/primary_button_bg"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnRevertFlexbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="استرجاع"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/secondary_button_bg"
            android:textColor="@color/text_secondary"
            android:layout_marginStart="8dp"
            android:padding="12dp" />

    </LinearLayout>

    <!-- معلومات إضافية -->
    <LinearLayout
        android:id="@+id/llFlexboxInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:background="@drawable/info_background"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="معلومات Flexbox"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/info_color"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvFlexboxInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/text_secondary"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</LinearLayout>