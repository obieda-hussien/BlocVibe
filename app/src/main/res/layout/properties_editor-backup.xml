<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_to_palette_btn"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to Components"
            app:icon="@drawable/ic_arrow_back" />

        <TextView
            android:id="@+id/selected_element_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editing: (none)"
            android:textAppearance="?attr/textAppearanceTitleMedium" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_id_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_class_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_width_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Width (e.g., 100px or 100%)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_color_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Color (e.g., #FF0000)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Element Management Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Element Actions"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            android:textColor="?attr/colorPrimary" />

        <!-- Move Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_move_up"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Move Up"
                app:icon="@android:drawable/arrow_up_float" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_move_down"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Move Down"
                app:icon="@android:drawable/arrow_down_float" />

        </LinearLayout>

        <!-- Duplicate & Delete Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_duplicate"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="Duplicate"
                app:icon="@android:drawable/ic_menu_add" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:text="Delete"
                android:textColor="@android:color/holo_red_dark"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconTint="@android:color/holo_red_dark"
                app:strokeColor="@android:color/holo_red_dark" />

        </LinearLayout>

        <!-- Wrap in Div Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_wrap_in_div"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Wrap in Container (Div)"
            app:icon="@android:drawable/ic_menu_view" />

    </LinearLayout>
</ScrollView>